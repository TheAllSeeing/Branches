<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.evergreen.treetop.ui.views.spinner.OvalSpinner
        android:id="@+id/sc_form_malfunction_spinner"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sc_form_malfunction_time" />

    <com.evergreen.treetop.ui.views.text.OvalTextView
        android:id="@+id/sc_form_malfunction_time"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="mm:ss â€” mm:ss"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/sc_form_malfunction_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sc_form_malfunction_spinner"
        app:layout_constraintBottom_toBottomOf="@id/sc_form_malfunction_spinner" />

    <com.evergreen.treetop.ui.views.text.OvalTextView
        android:id="@+id/sc_form_malfunction_description"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:hint="Description of the malfunction"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/sc_form_malfunction_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>