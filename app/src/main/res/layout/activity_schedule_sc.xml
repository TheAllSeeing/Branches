<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.scouts.schedule.SC_ScheduleActivity"
>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sc_rec_sched_main_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/sc_sched_fab_add_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sc_rec_sched_main_list"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="30dp"
        android:contentDescription="Add a schedule"
        android:src="@drawable/ic_add" />

</RelativeLayout>